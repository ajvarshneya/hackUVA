<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/asbestos" />
            <stroke
                android:width="2dp"
                android:color="@color/clouds" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="10dp"
                android:bottom="12dp"
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/peter" />
            <stroke
                android:width="2dp"
                android:color="@color/clouds" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="10dp"
                android:bottom="12dp"
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>
</selector>